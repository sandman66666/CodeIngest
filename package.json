{
  "name": "codeinsight",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "workspaces": [
    "client",
    "server",
    "common"
  ],
  "scripts": {
    "client": "npm run start --workspace client",
    "server": "npm run start --workspace server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "build": "node heroku-build.js",
    "heroku-postbuild": "echo 'Skipping automatic build'",
    "start": "node server.js",
    "install:all": "npm install && npm install --workspace client && npm install --workspace server && npm install --workspace common"
  },
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
