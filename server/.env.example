# Server Configuration
PORT=3030
NODE_ENV=development
CLIENT_URL=http://localhost:3001

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/codeinsight

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
# For development - must match exactly what's configured in your GitHub OAuth App
GITHUB_CALLBACK_URL=http://localhost:3030/api/auth/github/callback
# For production, uncomment and use your actual domain:
# GITHUB_CALLBACK_URL=https://your-app-domain.com/api/auth/github/callback

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# JWT Configuration
JWT_SECRET=your_jwt_secret_at_least_32_chars_long
JWT_EXPIRES_IN=7d

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
