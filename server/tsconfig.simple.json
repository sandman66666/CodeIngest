{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "module": "CommonJS",
    "target": "ES2020",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "ignoreDeprecations": "5.0",
    "allowJs": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "files": [
    "src/index-simple.ts",
    "src/services/code-ingestion.ts",
    "src/services/github.service.ts",
    "src/services/in-memory-store.ts"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
